/**
 * Implementation of hook_menu() 
 */
function import_menu() {
  $items = array();
  $items['import'] = array(
    'title' => 'Import Data',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('import_form'),
    'access arguments' => array('import content'),
    'type' => MENU_NORMAL_ITEM,
  );
  $items['import/fields'] = array(
    'title' => 'Import Data',
    'page callback' => 'drupal_get_form',
