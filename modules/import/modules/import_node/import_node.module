 * Implement hook_import_info()
 */
function import_node_import_info() {
  $info = array(
    'type' => 'node',
    'keys' => array(
      'nid' => 'Node Id',
      'title' => 'Title',
    ),
    'fields' => array(
      'nid' => 'Node Id',
      'title' => 'Title',
      'body' => 'Body',
      'created' => 'Created',
      'published' => 'Published',
      'sticky' => 'Sticky',
      'promote' => 'Promoted',
    ),
    'workflow' => array(
      'fields' => import_node_workflow_fields(),
      'callbacks' => '',
    ),
  );
  return $info;
}

